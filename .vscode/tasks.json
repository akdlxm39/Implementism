{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Build Solution",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-G",
				"MinGW Makefiles",
				"-B",
				"build",
				"-S",
				".",
				";",
				"cmake",
				"--build",
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-std=c++14",
				"-pedantic-errors",
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}\\run.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	]
}
