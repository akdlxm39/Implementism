{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Build Solution",
      "type": "shell",
      // -G "MinGW Makefiles"를 명시하여 윈도우 gcc를 확실히 사용하도록 지정
      "command": "cmake -G \"MinGW Makefiles\" -B build -S . ; cmake --build build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    }
  ]
}
