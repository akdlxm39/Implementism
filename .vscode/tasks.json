{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Build Solution",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-G",
				"MinGW Makefiles",
				"-B",
				"build",
				"-S",
				".",
				";",
				"cmake",
				"--build",
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc"
		}
	]
}
